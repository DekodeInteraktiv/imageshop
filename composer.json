{
	"name": "imageshop/imageshop",
	"description": "Use the Imageshop media library as your companys one source for all media.",
	"type": "wordpress-plugin",
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	},
    "require-dev": {
		"wp-coding-standards/wpcs": "^2.3.0",
		"symfony/var-dumper": "^7.3"
	},
	"scripts": {
		"lint": "php ./vendor/squizlabs/php_codesniffer/bin/phpcs",
		"lint:fix": "php ./vendor/squizlabs/php_codesniffer/bin/phpcbf"
	}
}
